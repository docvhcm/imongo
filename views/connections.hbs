<h2 class="text-center">{{__ "Connections"}}</h2>
{{#if message}}<h3 class="text-danger">{{__ "Connection"}}: {{conn}} - {{message}}</h3>{{/if}}
<div class="container">
    <div class="col-lg-12">
        <div class="list-group list-group-flush">
            {{#each connections}}
            <a href="{{@key}}" class="list-group-item btnConnConnect h4" data-connection="{{@key}}">{{@key}}</a>
            {{/each}}
        </div>
        <div class="d-flex align-items-center m-4 p-4 justify-content-center">
            <button type="button" class="btn btn-lg btn-outline-primary d-flex align-items-center" data-toggle="modal"
                href="#add-connection">
                <i class="material-icons mr-2">power</i>
                Add Connection
            </button>
        </div>

    </div>
</div>